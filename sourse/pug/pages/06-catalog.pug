extends ../layout/main.pug

include ../blocks/headerBlock/_headerBlock.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sContent/_sContent.pug
 
include ../blocks/sContact/_sContact.pug
include ../blocks/sCatalog/_sCatalog.pug
include ../blocks/sAlsoWatch/_sAlsoWatch.pug
include ../blocks/sPopularCategories/_sPopularCategories.pug
include ../blocks/sBanners/_sBanners.pug
include ../blocks/sIndividualOrder/_sIndividualOrder.pug
include ../blocks/sBestsellers/_sBestsellers.pug

block variables
	- let  mainPage= 'bg-gray' 
	- let  bg= ''

block title
	- let  title= 'Летние кухни, гриль зоны, барбекю комплексы'
	title= title
block pagecontent
	//- +mob-mnu()
	
	
	+parts('header')
	+topBtns().d-md-none
	main
		+page-head('Летние кухни, гриль зоны, барбекю комплексы', '', 'h4', 'Дачные постройки и конструкции', 'Летние кухни, гриль зоны, барбекю комплексы', 'Барбекю комплексы')
		+b.block-with-aside
			.container
				+e.row.row
					+e.col-auto.col-auto(data-aos="fade-up" data-aos-duration="400")
						+filter
							+e.item
								+e.headline Лучшие предложения
								+e.link(href='#') Новинки
								+e.link(href='#') Хиты
								+e.link(href='#') Скидки
								+e.link(href='#') Акции
							+e.item
								.h5 Категории
								+e.categories-link.active(href='#') Летние кухни, гриль зоны, барбекю комплексы
								+e.categories-link(href='#') Летние кухни
								+e.categories-link(href='#') Гриль зоны
								+e.categories-link(href='#') Барбекю комплексы
								+e.categories-link(href='#') Садовые кухни
							+e.item
								div(class="form-check form-switch")
									label(class="form-check-label" for="inStock") Только в наличии
									input(class="form-check-input" type="checkbox" role="switch" id="inStock")
							+ddGroup()
								+ddGroupItem('Цена, ₽')
									.range-slider
										input.js-range-slider(type='text' value='')
									.extra-controls
										label(for="") 
											input.js-input-from(type='text' value='0')
										label
											input.js-input-to(type='text' value='0')
							+e.item
								div(class="form-check form-switch")
									label(class="form-check-label" for="payment") Рассрочка без доплаты
									input(class="form-check-input" type="checkbox" role="switch" id="payment")
							+ddGroup()
								+ddGroupItem('Срок доставки')
									+in-c('radio', 'Любой', 'deliveryTime')
									+in-c('radio', '1 день', 'deliveryTime')
									+in-c('radio', '2 дня', 'deliveryTime')
									+in-c('radio', 'До 3 дней', 'deliveryTime')
									+in-c('radio', 'До 5 дней', 'deliveryTime')
								+ddGroupItem('Бренды', '', true)
									+in-c('checkbox', 'Apple', 'brands')
									+in-c('checkbox', 'Xiaomi', 'brands')
									+in-c('checkbox', 'Samsung', 'brands')
									+in-c('checkbox', 'Poco', 'brands')
									+in-c('checkbox', 'Realme', 'brands')
								+ddGroupItem('Цвет')
									+in-c('checkbox', '', 'color'): .color.color--border(style='--bgColor: #fff;') Белый
									+in-c('checkbox', '', 'color'): .color(style='--bgColor: #4D371F;') Венге
									+in-c('checkbox', '', 'color'): .color(style='--bgColor: #397D22;') Зеленый
									+in-c('checkbox', '', 'color'): .color(style='--bgColor: #8B4F1A;') Коричневый
									+in-c('checkbox', '', 'color'): .color(style='--bgColor: #845B4B;') Палисандр
									+in-c('checkbox', '', 'color'): .color(style='--bgColor: #808080;') Белый
									+in-c('checkbox', '', 'color'): .color(style='--bgColor: #000;') Черный 
								+ddGroupItem('Рейтинг')
									+in-c('radio', 'Не важно', 'raiting')
									+in-c('radio', '', 'raiting')
										+e.stars
											span От
											+stars(3)
									+in-c('radio', '', 'raiting')
										+e.stars
											span От
											+stars()
					.col
						+sCatalog
		+sAlsoWatchSearch(false)
	+parts('footer')
      



