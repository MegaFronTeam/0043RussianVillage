mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" placeholder='1' value="1")
		+e.btn--plus(type="button")



mixin page-head(t, span, customClass='h5', ...items)
	+b.page-head
		- let l = items.length
		if l > 0
			+e.breadcrumb
				.container
					+breadcrumb('Главная',...items)
		.container

			h1(class=customClass)
				!= t
				if span 
					span!= span

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

mixin searchBlock()
	+b.search-block 
		// вешать класс .show-result
		form
			input(type="text" placeholder="Поиск")
			button.btn.btn-primary
				+icon("search")

