mixin page-head(t, span, customClass='h5', ...items)
	+b.page-head(data-aos="fade-up" data-aos-duration="400")
		- let l = items.length
		if l > 0
			+e.breadcrumb
				.container
					+breadcrumb('Главная',...items)
		.container

			h1(class=customClass)
				!= t
				if span 
					span!= span

