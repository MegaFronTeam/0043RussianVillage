mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

mixin searchBlock()
	+b.search-block 
		// вешать класс .show-result
		form
			input(type="text" placeholder="Искать товары")
			button.btn.btn-primary
				+icon("search")

mixin mainPageNav()
	+b.main-page-nav
		.container
			.row
				.col-auto: a(href="#") Как оформить заказ 
				.col-auto: a(href="#") Оплата заказа
				.col-auto: a(href="#") Получение заказа
				.col-auto: a(href="#") География продаж
				.col-auto
					a(href="#")
						span %
						| Акции и Скидки
				.col-auto: a(href="#") Остались вопросы?

mixin card()
  +b.card
		+e.img-wrap
			+img(img)
		+e.content
			+e.price!= price
			p!=text 
			+e.create Производство Италия
			+e.rate
			.row 
				.col
					+e.btn.btn.btn-sm.btn-primary(href="#") В корзину
				.col-auto
					+addblock
