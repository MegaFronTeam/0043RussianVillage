mixin card(img, price, text, bg='bg', review=false, badge=false, similar=false, like=false)
	+b.card(class=(similar ? 'similar': '') data-aos="fade-up" data-aos-duration="400")
		if badge
			.badge.badge-orange Скидка -50%
		else if similar
			.badge.badge-gray Нет в наличии
		if like
			+e.like(href="#"): +icon('heart')
		+e.img-wrap(href='#')
			.img-wrap-center
				+img(`img/${img}`, bg)
		+e.content
			+e.price!= price
			+e.text(href='#')!=text 
			+e.create Производство Италия
			+e.review-wrap
				+stars
				if review
					span 3 отзыва
				else
					span 07.11.2021
			//- +e.rate
			if similar
				+e.btn.btn.btn-sm.btn-outline-dark(href="#") Похожие
			else
				+e.footer-row.row
					.col
						+e.btn.btn.btn-sm.btn-primary(href="#") 
							+icon('shopping-cart', 'd-md-none')
							span.d-none.d-md-block В корзину
					.col-auto
						+addblock

mixin cardHorizontal(img, price, text, bg='bg', review=false, badge=false)
	+b.card--horizontal(data-aos="fade-up" data-aos-duration="400")
		if badge
			.badge.badge-orange Скидка -50%
		+e.img-wrap(href='#')
			.img-wrap-center
				+img(`img/${img}`, bg)
		+e.content
			+e.text(href='#')!=text 
			+e.create Производство Италия
			+e.content-row.row
				.col-md
					+e.review-wrap
						+stars
						if review
							span 3 отзыва
						else
							span 07.11.2021
				.col-auto.me-auto.p-md-0.m-md-0
					+e.price!= price
				.col-auto
					+addblock
				.col-md-auto
					+e.btn.btn.btn-sm.btn-primary(href="#") 
						span В корзину

mixin orderCard(img, price, text, bg='bg', review=false, badge=false)
	+b.card--horizontal.card--order(data-aos="fade-up" data-aos-duration="400")
		if badge
			.badge.badge-orange.d-none.d-mg-block Скидка -50%
		+e.img-wrap(href='#')
			.img-wrap-center
				+img(`img/${img}`, bg)
		+e.text-wrap
			+e.text(href='#')!=text 
			+e.create Производство Италия
			+e.review-wrap
				+stars
				if review
					span 3 отзыва
				else
					span 07.11.2021
		+e.price!= price
		+e.buttons
			+addblock
			+e.btn.btn.btn-sm.btn-primary(href="#") 
				span В корзину

mixin recipe-card(img, title, descr, bg='bg')
