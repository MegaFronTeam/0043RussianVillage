mixin stars(rate=4)
	+b.stars(data-rating=rate)
		+icon('rateStar')
		+icon('rateStar')
		+icon('rateStar')
		+icon('rateStar')
		+icon('rateStar')

mixin card(img, price, text, bg='bg', review=false, badge=false)
	+b.card
		if badge
			.badge.badge-orange Скидка -50%
		+e.img-wrap(href='#')
			.img-wrap-center
				+img(`img/${img}`, bg)
		+e.content
			+e.price!= price
			+e.text(href='#')!=text 
			+e.create Производство Италия
			+e.review-wrap
				+stars
				if review
					span 3 отзыва
				else
					span 07.11.2021
			+e.rate
			+e.footer-row.row 
				.col
					+e.btn.btn.btn-sm.btn-primary(href="#") 
						+icon('shopping-cart', 'd-md-none')
						span.d-none.d-md-block В корзину
				.col-auto
					+addblock

mixin defSlider(arrow)
	+b.default-swiper.default-swiper-js&attributes(attributes)
		.swiper
			.swiper-wrapper
				block
		if arrow
			.d-none.d-md-block
				+arrow

