mixin sCardSlider(title, items=[], arrow)
	// start sCardSlider
	+b.sCardSlider.section&attributes(attributes)
		.container
			+e.wrapper
				if items.length == 0
					.section-title(data-aos="fade-up" data-aos-duration="400")
						.row.align-items-end
							.col
								h4!= title
							.col-auto
								+e.show-more(href="#") 
									| Смотреть все
									+icon('chevron-right')
				else
					+b.section-title(data-aos="fade-up" data-aos-duration="400")
						h4!= title
					+e.head-row.row(data-aos="fade-up" data-aos-duration="400")
						.col
							+e.tag-slider.freemode-slider--js.swiper
								.swiper-wrapper
									each item in items
										+e.tag-slide.swiper-slide: +e.tag(href='#')!= item
						.col-auto
							+e.show-more(href="#") 
								| Смотреть все
								+icon('chevron-right')
				+defSlider(arrow)
					block
	// end sCardSlider